@model ExtraClasesApp.Models.Notificacion

@{
    ViewData["Title"] = "Eliminar Notificación";
}

<h2 class="mb-4 text-danger">¿Estás seguro que deseas eliminar esta notificación?</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Asunto</dt>
            <dd class="col-sm-9">@Model.Asunto</dd>

            <dt class="col-sm-3">Destinatario</dt>
            <dd class="col-sm-9">@Model.Destinatario</dd>

            <dt class="col-sm-3">Fecha de Envío</dt>
            <dd class="col-sm-9">@Model.FechaEnvio.ToString("f")</dd>

            <dt class="col-sm-3">Mensaje</dt>
            <dd class="col-sm-9">@Model.Mensaje</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
    </div>
</div>
