@model ExtraClasesApp.Models.Estudiante

@{
    ViewData["Title"] = "Detalles del Estudiante";
}

<h2>Detalles del Estudiante</h2>

<div>
    <h4>Estudiante</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre Completo</dt>
        <dd class="col-sm-10">@Model.NombreCompleto</dd>

        <dt class="col-sm-2">Email Padre</dt>
        <dd class="col-sm-10">@Model.EmailPadre</dd>

        <dt class="col-sm-2">Teléfono Padre</dt>
        <dd class="col-sm-10">@Model.TelefonoPadre</dd>

        <dt class="col-sm-2">País</dt>
        <dd class="col-sm-10">@Model.Pais</dd>

        <dt class="col-sm-2">Curso</dt>
        <dd class="col-sm-10">@Model.Curso</dd>

        <dt class="col-sm-2">Tutor</dt>
        <dd class="col-sm-10">@Model.Tutor?.NombreCompleto</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
