@page
@model ExtraClasesApp.Models.Estudiante
@{
    ViewData["Title"] = "Eliminar Estudiante";
}

<h2>¿Estás seguro que deseas eliminar este estudiante?</h2>

<div>
    <h4>Estudiante</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre Completo
        </dt>
        <dd class="col-sm-10">
            @Model.NombreCompleto
        </dd>
        <dt class="col-sm-2">
            Correo del Padre
        </dt>
        <dd class="col-sm-10">
            @Model.EmailPadre
        </dd>
        <dt class="col-sm-2">
            País
        </dt>
        <dd class="col-sm-10">
            @Model.Pais
        </dd>
        <dt class="col-sm-2">
            Curso
        </dt>
        <dd class="col-sm-10">
            @Model.Curso
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>