@model ExtraClasesApp.Models.Estudiante

@{
    ViewData["Title"] = "Editar Estudiante";
}

<h2>Editar Estudiante</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="NombreCompleto" class="control-label"></label>
        <input asp-for="NombreCompleto" class="form-control" />
        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmailPadre" class="control-label"></label>
        <input asp-for="EmailPadre" class="form-control" />
        <span asp-validation-for="EmailPadre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TelefonoPadre" class="control-label"></label>
        <input asp-for="TelefonoPadre" class="form-control" />
        <span asp-validation-for="TelefonoPadre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pais" class="control-label"></label>
        <input asp-for="Pais" class="form-control" />
        <span asp-validation-for="Pais" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Curso" class="control-label"></label>
        <input asp-for="Curso" class="form-control" />
        <span asp-validation-for="Curso" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TutorId" class="control-label">Tutor Asignado</label>
        <select asp-for="TutorId" class="form-control" asp-items="ViewBag.TutorId"></select>
        <span asp-validation-for="TutorId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
